@model OdinXSiteMVC2.Models.Exec

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Exec</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="execID" />
            <div class="form-group">
                <label asp-for="execFirstName" class="control-label"></label>
                <input asp-for="execFirstName" class="form-control" />
                <span asp-validation-for="execFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="execLastName" class="control-label"></label>
                <input asp-for="execLastName" class="form-control" />
                <span asp-validation-for="execLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="execGamingTag" class="control-label"></label>
                <input asp-for="execGamingTag" class="form-control" />
                <span asp-validation-for="execGamingTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="username" class="control-label"></label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="execTitle" class="control-label"></label>
                <input asp-for="execTitle" class="form-control" />
                <span asp-validation-for="execTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="execHierarchy" class="control-label"></label>
                <input asp-for="execHierarchy" class="form-control" />
                <span asp-validation-for="execHierarchy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="loginAmt" class="control-label"></label>
                <input asp-for="loginAmt" class="form-control" />
                <span asp-validation-for="loginAmt" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="lastLogin" class="control-label"></label>
                <input asp-for="lastLogin" class="form-control" />
                <span asp-validation-for="lastLogin" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="favGame" class="control-label"></label>
                <input asp-for="favGame" class="form-control" />
                <span asp-validation-for="favGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="execPic" style="width: 100%;"></label>
                @if (Model.execPic != null)
                {
                    <img id="profilePicture" style="width:100%;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.execPic))">
                }
                else
                {
                    <img id="profilePicture" style="width:100%;height:350px; object-fit:cover" src="">
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="execPic"
                       
                       id="form-controlss"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('execPic').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="execPic" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
