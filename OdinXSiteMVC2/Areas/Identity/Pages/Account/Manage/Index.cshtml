@model IndexModel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment _webHostEnvironment
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    //var src = "../../Assets/Pic/26293.jpg";

}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">

    <p> this is : @ViewData["ID"]   </p>
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bio"></label>
                <input asp-for="Input.Bio" class="form-control" />
                <span asp-validation-for="Input.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label @*asp-for="Input.ProfilePic"*@ style="width: 100%;"></label>
                <input name="imageFile" type="file" enctype="multipart/form-data" @*asp-for="Input.ProfilePic"*@
                    accept=".png,.jpg,.jpeg,.gif,.tif" />
                <span @*asp-validation-for="Input.ProfilePic"*@ class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary" click >Save</button>    
        </form>
    </div> 
</div>

